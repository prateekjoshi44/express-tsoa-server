generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         String    @id @default(uuid())
  name       String    @db.VarChar(100)
  email      String    @unique @db.VarChar(150)
  created_at DateTime? @default(now()) @db.Timestamp(6)
}

model products {
  id          String @id @default(uuid())
  name        String
  description String
  price       Float
}
